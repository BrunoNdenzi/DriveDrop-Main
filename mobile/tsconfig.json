{
  "compilerOptions": {
    "jsx": "react-native",
    "allowJs": true,
    "strict": true,
    // Use native ES modules so TypeScript doesn't downlevel to CommonJS 'require' calls
    "module": "esnext",
    "target": "esnext",
    // Bundler resolution works well with React Native / Expo and ESM packages
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "noEmit": true
  },
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js"
  ],
  "extends": "expo/tsconfig.base"
}
